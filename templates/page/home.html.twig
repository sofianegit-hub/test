{% extends 'base.html.twig' %}

{% block title 'Test' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Bienvenue</h1>
    </div>

    <div class="container">
        <h2>Les infos</h2>
        <div class="rowflex">
            {% for utilisateur in infos %} <!--Boucle pour chacune des propriétés dans properties-->
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">{{ utilisateur.nom }} </p>
                            <p class="card-text">({{ utilisateur.prenom }})</p>
                            <p class="card-text">({{ utilisateur.birthday }})</p>
                            <p class="card-text">({{ utilisateur.mail }})</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
